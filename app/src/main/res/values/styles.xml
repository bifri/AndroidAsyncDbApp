<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!--
            An attribute in the current theme that contains a reference
            to a style resource that supplies default values for the RingButton.
            Can be 0 to not look for defaults.
        -->

    </style>

    <style name="ListItemTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/greenlight</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlanetDetailsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:layout_margin">@dimen/details_item_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/bluedark</item>
    </style>

    <style name="PlanetDetailsEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:layout_marginLeft">@dimen/details_item_margin</item>
        <item name="android:layout_marginRight">@dimen/details_item_margin</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

</resources>